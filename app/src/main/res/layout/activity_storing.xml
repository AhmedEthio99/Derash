<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".STORING">

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="123dp"
        android:layout_height="26dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="-16dp"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />


    <Button

        android:id="@+id/button_store"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="-103dp"
        android:layout_marginRight="203dp"
        android:background="@drawable/custom_button"
        android:text="ORDER"
        android:textSize="17sp"
        android:textStyle="bold"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <Button

        android:id="@+id/button_delete"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="-103dp"
        android:background="@drawable/custom_button"
        android:text="CANCEL"
        android:textSize="17sp"
        android:textStyle="bold"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <RadioGroup
        android:id="@+id/TypesRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-540dp"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/typeARadioButton"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="TYPE A"
            android:textSize="19sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/typeBRadioButton"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="TYPE B"
            android:textSize="19sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/typeCRadioButton"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="TYPE C"
            android:textSize="19sp"
            android:textStyle="bold" />
    </RadioGroup>



    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="407dp"
        android:layout_height="478dp"
        android:layout_marginStart="-8dp"
        android:layout_marginEnd="-6dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989"
        tools:ignore="UnknownId" />


</androidx.constraintlayout.widget.ConstraintLayout>